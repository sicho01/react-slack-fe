{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es5",
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "@hooks/*": ["src/views/hooks/*"],
      "@components/*": ["src/views/components/*"],
      "@layouts/*": ["src/views/layouts/*"],
      "@pages/*": ["src/views/pages/*"],
      "@stores/*": ["src/stores/*"],
      "@utils/*": ["src/utils/*"],
      "@common/*": ["src/common/*"]
    }
  }
}
